---
import type { Service } from '@/interfaces';
import Container from '@/layouts/Container.astro';
import Sectionhead from './sectionhead.astro';
import ServiceCard from './ServiceCard.astro';

interface Props {
  block: {
    title: string;
    subtitle: string;
    description: string;
    card: Service[];
  };
}

const { block } = Astro.props;
const { title, subtitle, description, card } = block;
---

<Container>
  <div class='max-w-screen-sm mx-auto'>
    <Sectionhead level='h2'>
      <Fragment slot='subtitle'>{subtitle}</Fragment>
      <Fragment slot='title'>{title}</Fragment>
    </Sectionhead>
  </div>
  <p
    class='max-w-screen-md text-secondary mt-4 mx-auto text-justify sm:text-center'
  >
    {description}
  </p>
  <div class='my-20'>
    <div class='grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3'>
      {card.map((service: Service) => <ServiceCard {service} />)}
    </div>
  </div>
</Container>
