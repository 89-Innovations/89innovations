---
import Sectionhead from './sectionhead.astro';
import ShowcaseCard from './ui/ShowcaseCard.astro';

const { block } = Astro.props;
const { title, subtitle, description, showcase } = block;
---

<div class='bg-white xl:py-40 py-16 md:py-24 lg:py-32 lg:px-8'>
  <div class='max-w-screen-sm mx-auto'>
    <Sectionhead level='h2'>
      <Fragment slot='subtitle'>{subtitle}</Fragment>
      <Fragment slot='title'>{title}</Fragment>
    </Sectionhead>
  </div>
  <p class='max-w-screen-md px-4 text-secondary mt-4 mx-auto sm:text-center'>
    {description}
  </p>
  <div class='sm:my-20 my-10'>
    <div
      class='grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 max-w-screen-xl mx-auto'
    >
      {showcase.map((item: any) => <ShowcaseCard item={item} />)}
    </div>
  </div>
</div>
